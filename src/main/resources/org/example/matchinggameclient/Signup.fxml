<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.matchinggameclient.controller.SignupController">
    <children>
        <ImageView fitHeight="800" fitWidth="1200" preserveRatio="false">
            <image>
                <Image url="@img/back1.jpg" />
            </image>
        </ImageView>
        <ImageView fitHeight="449.0" fitWidth="483.0" layoutX="408.0" layoutY="120.0" opacity="0.46" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@img/back3.jpg" />
            </image>
        </ImageView>
        <Label layoutX="435.0" layoutY="136.0" text="MEMORY GAME" textFill="WHITE">
            <font>
                <Font name="System Bold" size="50.0" />
            </font>
        </Label>
        <GridPane layoutX="441.0" layoutY="226.0" prefHeight="149.0" prefWidth="377.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="295.0" minWidth="10.0" prefWidth="156.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="227.0" minWidth="0.0" prefWidth="227.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Username" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="25.0" />
                    </font>
                </Label>
                <Label text="Password" textFill="WHITE" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="25.0" />
                    </font>
                </Label>
                <TextField fx:id="usernametextField" prefHeight="26.0" prefWidth="222.0" GridPane.columnIndex="1">
                    <font>
                        <Font size="18.0" />
                    </font>
                </TextField>
            <PasswordField fx:id="passwordtextField" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font size="18.0" />
               </font>
            </PasswordField>
            </children>
        </GridPane>
        <Button fx:id="signupBtn" layoutX="438.0" layoutY="416.0" mnemonicParsing="false" onAction="#handleSignupBtn" prefHeight="51.0" prefWidth="377.0" text="Sign up" textFill="#000000cd">
            <font>
                <Font name="System Bold" size="25.0" />
            </font>
        </Button>
        <Label layoutX="441.0" layoutY="491.0" prefHeight="51.0" prefWidth="279.0" text="Already have an account?" textFill="WHITE">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Text fx:id="loginLabel" fill="#ffffffd6" layoutX="683.0" layoutY="526.0" onMouseClicked="#handleLoginLabel" style="-fx-cursor: hand; -fx-font-weight: bold;" text="Login now" underline="true">
            <font>
                <Font size="24.0" />
            </font>
        </Text>
      <Text fx:id="statusText" fill="#e43636" layoutX="451.0" layoutY="404.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="383.0">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </Text>
    </children>
</AnchorPane>
