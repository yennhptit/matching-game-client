<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.matchinggameclient.controller.PracticeGameController" alignment="TOP_CENTER" stylesheets="@game_view.css" styleClass="main-container" prefWidth="1200" prefHeight="800">
    <!--    spacing="10"-->
    <BorderPane>
        <BorderPane prefHeight="50.0" prefWidth="1200.0" style="-fx-background-color: #1b5e47;" BorderPane.alignment="CENTER">
            <top>
                <BorderPane prefHeight="50.0" prefWidth="1200.0" style="-fx-background-color: #1b5e47;" BorderPane.alignment="CENTER">
                    <!-- Left Section -->
                    <left>
                        <Label fx:id="clientInfoLabel" contentDisplay="CENTER" prefHeight="66.0" prefWidth="486.0"
                               style="-fx-text-fill: #ffffff;" text="Player: player0    Rank: #001    Stars: 100"
                               BorderPane.alignment="CENTER">
                            <font>
                                <Font name="System Bold" size="22.0" />
                            </font>
                            <BorderPane.margin>
                                <Insets left="20.0" />
                            </BorderPane.margin>
                        </Label>
                    </left>

                    <!-- Right Section -->
                    <right>
                        <GridPane prefHeight="49.0" prefWidth="401.0" BorderPane.alignment="CENTER">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="184.0" minWidth="10.0" prefWidth="102.0" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="181.0" minWidth="10.0" prefWidth="105.0" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="122.0" minWidth="10.0" prefWidth="103.0" />
                                <ColumnConstraints maxWidth="99.0" minWidth="87.0" prefWidth="95.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Button fx:id="exitButton" mnemonicParsing="false" prefHeight="31.0" prefWidth="79.0"
                                        style="-fx-background-color: #ff7f27; -fx-text-fill: #FFFFFF; -fx-background-radius: 10;"
                                        text="Home" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                                    <font>
                                        <Font name="System Bold" size="15.0" />
                                    </font>
                                </Button>
                            </children>
                            <BorderPane.margin>
                                <Insets right="21.0" />
                            </BorderPane.margin>
                        </GridPane>
                    </right>
                </BorderPane>
            </top>
        </BorderPane>

        <left>
            <VBox alignment="TOP_CENTER" spacing="10" styleClass="side-info-panel" prefHeight="800">
                <HBox alignment="CENTER" spacing="10" styleClass="time-box">
                    <Label text="⏰" fx:id="clockIcon" styleClass="clock-icon"/>
                    <Label text="Time Left: 5:00" fx:id="timeLabel" styleClass="time-label"/>
                </HBox>

                <VBox spacing="10" styleClass="player-info-panel">
                    <Label text="Your Information" styleClass="header-label"/>
                    <Label fx:id="scoreLabel" text="Score: 0" styleClass="status-item"/>
                    <Label fx:id="pairsFlippedLabel" text="Pairs Flipped: 0" styleClass="status-item"/>
                </VBox>

                <!--                <VBox spacing="10" styleClass="opponent-info-panel">-->
                <!--                    <Label text="Opponent Information" styleClass="header-label"/>-->
                <!--                    <Label fx:id="opponentLabel" text="Opponent: Player2" styleClass="status-item"/>-->
                <!--                    <Label fx:id="opponentScoreLabel" text="Score: 0" styleClass="status-item"/>-->
                <!--                </VBox>-->
            </VBox>
        </left>




        <center>
            <GridPane fx:id="gameGrid" alignment="CENTER" hgap="15" vgap="15" styleClass="game-grid">
                <!-- Buttons for cards will be added here -->
            </GridPane>
        </center>
    </BorderPane>
</VBox>
